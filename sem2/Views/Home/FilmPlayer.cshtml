@using sem2.Views
@model int

<link rel="stylesheet" href="css/collapse.css?ver=100">
<div class="header-content">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="description" >
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <div class="film">
                            <video controls width="100%" height="670" poster="@Url.Content($"~/{FilmHelpers.LogoImagePath(Model)}")" preload="none">
                                <source src="@Url.Content($"~/{FilmHelpers.FilmImagePath(Model)}")" type="video/mp4">
                            </video>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- row -->
    </div> <!-- Container -->
</div>	<!-- header-content -->


<script src="./js/javascript.js"></script>
