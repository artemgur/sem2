@model PasswordResetModel

@{
    Layout = "_AccountLayout";
}

<!-- Tab panes -->
<div class="tab-content tabs">
    <div role="tabpanel" class="tab-pane fade in active" id="ResetPassword">
        <form class="form-horizontal" action="" method="post">
            <input type="hidden" name="Email" value="@Model.Email"/>
            <input type="hidden" name="Key" value="@Model.Key"/>
            <div class="form-group">
                <label asp-for="NewPassword">Пароль</label>
                <input asp-for="NewPassword" class="form-control custom"/>
                <span asp-validation-for="NewPassword"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Подтвердите пароль</label>
                <input asp-for="ConfirmPassword" class="form-control custom"/>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="form-group send">
                <button type="submit" id="sendEmail">Подтвердить</button>
            </div>
        </form>
    </div>
</div>