@model sem2_FSharp.ViewModels.ProfileModels.PasswordResetModel

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="tab" role="tabpanel">
                <!-- Tab panes -->
                <div class="tab-content tabs">
                    <div role="tabpanel" class="tab-pane fade in active" id="ResetPassword">
                        <form class="form-horizontal" action="" method="post">
                            <div class="form-group">
                                @Html.LabelFor(m => m.NewPassword, "Пароль")
                                @Html.EditorFor(m => m.NewPassword, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(m => m.NewPassword)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, "Подтвердите пароль")
                                @Html.EditorFor(m => m.ConfirmPassword, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                            <div class="form-group send">
                                <button type="submit" id="sendEmail">Подтвердить</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div><!-- /.col-md-offset-3 col-md-6 -->
    </div><!-- /.row -->
</div><!-- /.container -->
