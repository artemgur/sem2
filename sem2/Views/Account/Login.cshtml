@model sem2.Models.ViewModels.AccountModels.LoginModel

@{
    Layout = "_AccountLayout";
}

<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#Section1" aria-controls="home" role="tab" data-toggle="tab">sign in</a></li>
</ul>
<!-- Tab panes -->
<div class="tab-content tabs">
    <div role="tabpanel" class="tab-pane fade in active" id="Section1">
        <form class="form-horizontal" action="" method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" ></span>
            </div>
            <div class="form-group">
                <div class="main-checkbox">
                    <input value="None" id="checkbox1" name="rememberMe" type="checkbox">
                    <label for="checkbox1"></label>
                </div>
                <span class="text">Keep me Signed in</span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Sign in</button>
            </div>
            <div class="form-group google">
                <p id="google">Or log with google</p>
                <a asp-controller="Account" asp-action="GoogleLogin">
                <img class = "googleIcon" src="~/images/google.png" alt="google">
                </a>
            </div>
            <div class="form-group forgot-pass">
                <a asp-area="" asp-controller="Account" asp-action="ResetPassword" type="submit" class="btn btn-default">forgot password</a>
            </div>
            <div class="form-group create-account">
                <span id="look">Looking to</span>
                <a asp-area="" asp-controller="Account" asp-action="Register" type="submit" id="createAccount" class="btn btn-default">create an account ?</a>
            </div>
        </form>
    </div>
</div>