@model string

@{
    Layout = "_AccountLayout";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="mt-2 alert alert-danger container d-flex justify-content-center align-items-center margin-bottom-40px">
        @Html.ValidationSummary()
    </div>
}
else
{
    <div class="alert alert-info container d-flex justify-content-center align-items-center margin-bottom-40px">
        <p class="lead text-center">Для смены пароля Вам было отправлено сообщение с дальнейшими инструкциями на электронную почту @Model.</p>
    </div>
}