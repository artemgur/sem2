@model sem2.Models.ViewModels.AdminPanelModels.CreateSubscriptionModel

<div class="header-content">
    <div class="container">
        <div class="admin-panel-main-text">Добавить подписку</div>
        <form autocomplete="off" id="form" method="post" action="" enctype="multipart/form-data" class="admin-panel-form">
            <div class="form-group">
                <label asp-for="Name">Название</label>
                <input asp-for="Name" class="form-control" placeholder="Название подписки" />
            </div>
            <span asp-validation-for="Name"></span>
            
            <div class="form-group">
                <label asp-for="Price">Цена</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price"></span>
            
            <div class="form-group">
                <label asp-for="Duration">Длительность</label>
                <input asp-for="Duration" class="form-control" placeholder="Длительность подписки в днях"/>
            </div>
            <span asp-validation-for="Duration"></span>

            <div class="form-group vertical">
                <label asp-for="Description">Описание</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <span asp-validation-for="Description"></span>
            
            <span asp-validation-for="Permissions"></span>
            
            <div class="form-group vertical">
                <label>Разрешения</label>
            </div>
            <div class="mt-1" id="permissions-container">
                
            </div>

            <div class="form-group mt-4 mb-1">
                <label for="inputGroupFile01">Лого</label>
                <input type="file" class="custom-file-input" id="inputGroupFile01" name="LogoImage">
                <label class="custom-file-label" for="inputGroupFile01">Выберите файл</label>
                <label for="inputGroupFile01" class="custom-file-label-after">Browse</label>
            </div>

            <button type="submit" class="admin-panel-submit-button mt-4">Добавить подписку</button>
        </form>
    </div> <!-- Container -->
</div>	<!-- header-content -->

@section Scripts
{
    <script src="~/js/createSubscription.js"></script>
    <script src="~/js/autocomplete.js"></script>
    <link rel="stylesheet" href="~/css/adminPanel.css">
    <link rel="stylesheet" href="~/css/validation.css">
    <link rel="stylesheet" href="~/css/autocomplete.css">
}